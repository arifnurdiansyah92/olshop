@model IEnumerable<Marketplace.Models.Produk>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nama)
                </th>
                <th>
                    Gambar
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Harga)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stok)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StokLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskripsi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
                @foreach (var gambar in item.Gambar)
                {
                    <img src="@gambar.Gambar" class="img-responsive" width="200"/>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Harga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StokLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deskripsi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <img src="@item.Kategori.Ikon" class="img-responsive" width="50" title="@item.Kategori.Nama" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdukId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdukId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdukId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
